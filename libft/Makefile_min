SDIR = srcs/
SRCS = count_char.c main.c read_info.c read_map.c
DIRSRCS = $(addprefix $(SDIR), $(SRCS))
OBJS = $(DIRSRCS:.c=.o)
HDIR = includes/
CC = gcc
CFLAGS = -Wall -Wextra -Werror -c
NAME = libft


all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(OBJS) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -o $@ $< -I $(HDIR)

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean
	make

.PHONY: clean fclean re
